{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "./src",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "target": "es2017",
      "paths": {
        "*": ["types/*"]
      },
      "declaration": true
    },
    "exclude": [
      "dist",
      "coverage",
      "jest.config.js",
      "jest",
      "node_modules",
      "release.config.js",
      "**/**/*.spec.ts",
      "test"
    ],
    "types": ["typePatches"]
  }
  